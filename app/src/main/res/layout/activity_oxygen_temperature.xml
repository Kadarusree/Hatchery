<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="-1dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="@string/tank_number"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_tank_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.6"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="@string/entry_date"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.6"
                android:background="@drawable/bg_edittext"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:gravity="left|center"
                android:inputType="date"
                android:paddingLeft="@dimen/dp_5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="Initials"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_initials"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.6"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_5" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt2"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt3"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt4"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:singleLine="true"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt5"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:singleLine="true"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt6"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:singleLine="true"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt7"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:singleLine="true"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:text="@string/ot_opt8"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/ot_f8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="0.4"
                android:background="@drawable/bg_edittext"
                android:gravity="left|center"
                android:imeOptions="actionDone"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:singleLine="true"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.15">


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="0.05"
            android:background="@color/blue"
            android:gravity="center"
            android:onClick="history"
            android:text="History"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:id="@+id/tv_save_tank_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:background="@color/blue"
            android:gravity="center"
            android:onClick="saveData"
            android:text="SAVE"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_20" />
    </LinearLayout>


</LinearLayout>